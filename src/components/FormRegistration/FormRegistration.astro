---
import Input from "@components/UI/Input/input.astro";
import {Form} from "@components/Form/Form";
---
<div class="flex flex-col w-full pr-10 pl-20">
	<h1 class="text-5xl text-center font-bold mb-10">Создать аккаунт</h1>
	<Form
		action="/api/registration"
		submitButton={{sendText: 'Создать аккаунт'}}
		client:load
	>
		<div class="flex gap-2 justify-between">
			<Input name="name" type="text" placeholder="Введите имя" title="Имя"/>
			<Input name="sername" type="text" placeholder="Введите фамилию" title="Фамилия"/>
		</div>
		<Input name="login" type="text" placeholder="Введите логин" title="Логин"/>
		<Input name="email" type="text" placeholder="Введите почту" title="Email"/>
		<Input name="password" type="password" placeholder="Пароль" title="Пароль"/>
	</Form>
</div>
